{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES6",
        "moduleResolution": "node",
        "outDir": "./public/dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
          "@components/*": ["components/*"],
          "@pages/*": ["pages/*"],
          "@utils/*": ["utils/*"],
          "@styles/*": ["styles/*"]
        }
    },
    "include": ["./src/**/*", "serviceWorker.js"],
    "exclude": ["./public"]
}
